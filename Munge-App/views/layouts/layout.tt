[% WRAPPER 'layouts/main.tt'
   title = 'Munge - Feed Me!'
%]
    <div class="navbar navbar-inverse">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">Munge</a>
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse collapse navbar-responsive-collapse">
            <form class="navbar-form pull-right" action="/manage/subscribe" method="post">
              <input placeholder="import feed url" type="text" name="feed_url" id="subscribe-feed-url" />
              <button type="submit" class="btn"><i class="icon-ok-sign"></i>import</button>
            </form>
            <ul class="nav pull-right">
              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">[% account.email %] <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="/account/logout">  logout</a></li>
                  <li><a href="/manage/import">import feeds</a></li>
                </ul>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row-fluid">
        [% IF feeds.0 %]
        <div id="nav-main" class="span3">
            <ul id="feed-menu">
                <li class="[% IF NOT feed %]active[% END %] green"><a href="/"><i class="icon-th-large"></i>today</a></li>
                <li class="[% IF feed.uuid_string == 'archive' %]active[% END %] blue"><a href="/feed/archive"><i class="icon-list"></i>crunch</a></li>
                <li class="[% IF feed.uuid_string == 'starred' %]active[% END %] orange"><a href="/feed/starred"><i class="icon-time"></i>saved</a></li>
            </ul>
            <ul id="sidebar" class="nav nav-stacked">
                [% FOREACH f IN feeds %]
                <li><a class="[% IF f.unread_items %]unread[% END %]" href="/feed/read/[% f.uuid_string %]">
                    <span class="unread-count">[% IF f.unread_items %][% f.unread_items %] [% END %]</span>
                    [%~ f.title %]</a></li>
                [% END %]
            </ul>
        </div>
        [% END %]
        <div id="content-main" class="">
          [% content %]
        </div>
      </div>
    </div>
  </body>
[% END %]
